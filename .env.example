# =============================================================================
# ExpenseSyncBot - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values

# -----------------------------------------------------------------------------
# GoCardless API (Bank Account Data)
# Get credentials from: https://bankaccountdata.gocardless.com/
# -----------------------------------------------------------------------------
GOCARDLESS_SECRET_ID=your_secret_id_here
GOCARDLESS_SECRET_KEY=your_secret_key_here
BANK_ACCOUNT_ID=your_bank_account_id_here

# -----------------------------------------------------------------------------
# OpenAI API
# Get API key from: https://platform.openai.com/api-keys
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
# Optional: Use a different model for categorization
# OPENAI_CATEGORIZATION_MODEL=gpt-4o

# -----------------------------------------------------------------------------
# MCP Server (.NET)
# Path to your Budget_Automation MCP server project
# -----------------------------------------------------------------------------
MCP_SERVER_PROJECT_PATH=/path/to/Budget_Automation/Budget_Automation.MCPServer/src
MCP_SERVER_URL=http://localhost:5000/sse
MCP_SERVER_STARTUP_TIMEOUT=10
MCP_SERVER_CONFIGURATION=Release

# -----------------------------------------------------------------------------
# Validation Settings
# -----------------------------------------------------------------------------
# Enable LLM double-checking of categorization (uses extra API calls)
ENABLE_LLM_VERIFICATION=false
# Optional: Path to custom rules JSON file
# CUSTOM_RULES_FILE=./config/custom_rules.json

# -----------------------------------------------------------------------------
# General Settings
# -----------------------------------------------------------------------------
# Number of days to fetch transactions for
DAYS_TO_FETCH=7
# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
